{
  "name": "argos-tracker",
  "version": "0.0.0",
  "description": "Argos tracker permite hacer seguimiento de la posicion de tus mascotas desde tu celular o computadora. La solucion consiste en una aplicacion frontend para los usuarios y de una logica de backend que permita hacer tanto seguimiento de las mascotas como respuestas de las peticiones de los usuarios.",
  "homepage": "https://github.com/martinBustos23/argos-tracker#readme",
  "bugs": {
    "url": "https://github.com/martinBustos23/argos-tracker/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martinBustos23/argos-tracker.git"
  },
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "postinstall": "mkdir -p ./public/js/ && cp ./node_modules/jspdf/dist/jspdf.umd.min.js ./public/js/ && cp ./node_modules/jspdf-autotable/dist/jspdf.plugin.autotable.min.js ./public/js/",
    "start": "node .",
    "dev": "nodemon .",
    "format": "prettier --write .",
    "test": "mocha --watch-all --recursive --verbose"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "mysql2": "^3.14.2",
    "sharp": "^0.34.4",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "chai": "^6.0.1",
    "mocha": "^11.7.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prettier-plugin-ejs": "^1.0.3"
  }
}

<%- include('../layouts/header', {title: 'users-title'}); %>

<%- include('../layouts/sidebar'); %>

<div class="main-content">
  <div class="users-container">
    <div class="header-row">
      <div>
        <h1 class="page-title">Gestión de Usuarios</h1>
        <p class="page-subtitle">Lista de todos los usuarios registrados</p>
      </div>
      <button class="add-btn" id="toggleFormBtn">+</button>
    </div>

    <div class="form-wrapper" id="userFormWrapper" style="display: none;">
      <form action="/api/users" method="POST" class="user-form">
        <div class="form-group">
          <label for="username">Usuario</label>
          <input type="text" id="username" name="username" required>
        </div>

        <div class="form-group">
          <label for="password">Contraseña</label>
          <input type="password" id="password" name="password" required>
        </div>


        <button type="submit" class="submit-btn">Registrar</button>
      </form>
    </div>

    <div class="table-wrapper">
      <table class="users-table">
        <thead>
          <tr>
            <th>Usuario</th>
            <th>Administrador</th>
            <th>Activo</th>
            <th>Eliminar</th>
          </tr>
        </thead>
        <tbody>
          <% if (users.length > 0) { %>
            <% users.forEach(user => { %>
              <tr>
                <td><%= user.username %></td>
                <td><%= user.admin ? 'Sí' : 'No' %></td>
                <td><%= user.active ? 'Sí' : 'No' %></td>
                <td>
                  <button class="delete-btn" data-id="<%= user.username %>">Eliminar</button>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="3" class="empty-message">No hay usuarios registrados.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<style>
  .main-content {
    padding: 2rem;
    background-color: #f8f9fa;
    min-height: 100vh;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .users-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .header-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .page-title {
    font-size: 2rem;
    font-weight: 700;
    color: #343a40;
    margin-bottom: 0.3rem;
  }

  .page-subtitle {
    font-size: 1rem;
    color: #6c757d;
  }

  .add-btn {
    background-color: #d44d5c;
    color: white;
    border: none;
    font-size: 1rem;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    cursor: pointer;
    transition: background 0.3s;
  }

  .add-btn:hover {
    background-color: #e26574;
  }

  .form-wrapper {
    background: #ffffff;
    padding: 1rem;
    margin: 1rem 0;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  }

  .user-form {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .form-group {
    flex: 1 1 45%;
    display: flex;
    flex-direction: column;
  }

  .form-group label {
    margin-bottom: 0.3rem;
    font-weight: 600;
  }

  .form-group input[type="text"],
  .form-group input[type="password"] {
    padding: 0.5rem;
    border: 1px solid #ced4da;
    border-radius: 4px;
  }

  .checkbox-group {
    flex: 1 1 100%;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .submit-btn {
    background-color: #0b0014;
    color: white;
    border: none;
    padding: 0.6rem 1.2rem;
    border-radius: 4px;
    cursor: pointer;
    font-weight: bold;
    margin-top: auto;
  }

  .table-wrapper {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    overflow-x: auto;
  }

  .users-table {
    width: 100%;
    border-collapse: collapse;
  }

  .users-table thead {
    background-color: #0b0014;
    color: #fff;
  }

  .users-table th,
  .users-table td {
    padding: 0.8rem 1rem;
    text-align: left;
    border-bottom: 1px solid #dee2e6;
  }


  .empty-message {
    text-align: center;
    padding: 1rem;
    color: #6c757d;
  }

  @media (max-width: 600px) {
    .users-table th, .users-table td {
      padding: 0.5rem;
    }

    .page-title {
      font-size: 1.5rem;
    }
  }
</style>

<script>
  document.getElementById('toggleFormBtn').addEventListener('click', function () {
    const formWrapper = document.getElementById('userFormWrapper');
    formWrapper.style.display = formWrapper.style.display === 'none' ? 'block' : 'none';
  });

  document.addEventListener('DOMContentLoaded', () => {
  document.querySelectorAll('.delete-btn').forEach(button => {
    button.addEventListener('click', async (event) => {
      event.preventDefault();

      const id = button.dataset.id;
      const confirmDelete = confirm(`¿Seguro que quieres eliminar al usuario ${id}?`);
      if (!confirmDelete) return;

      try {
        const res = await fetch(`/api/users/${id}`, {
          method: 'DELETE'
        });

        if (res.ok) {
          alert('Usuario eliminado correctamente');
          location.reload();
        } else {
          const errorData = await res.json();
          alert(`Error eliminando usuario: ${errorData.message || res.statusText}`);
        }
      } catch (err) {
        alert(`Error de conexión: ${err.message}`);
      }
    });
  });
});
</script>

<%- include('../layouts/footer'); %>